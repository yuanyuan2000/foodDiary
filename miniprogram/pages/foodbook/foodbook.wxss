/* pages/foodbook/foodbook.wxss */
.background {
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index: -1;
  }

.part1{
    background-color: #fff;
    margin-top: 80rpx;
    width: 80%;
    position: relative;
    transform: translateX(13%);
    box-shadow: 2rpx 4rpx 6rpx 4rpx rgb(170, 170, 170);
    border-radius: 4%;
}

.title1{
    font-size: medium;
    color: gray;
    margin-top: 15px;
    margin-bottom: 10px;
    margin-left: 12px;
}
/* 酸 */
.sour{
    transform: translateX(5%);
    display: flex;
    flex:8;
}

.sourtext{
    margin-top: 7px;
    font-size: 16px;
    flex:1;
    color: gray;
}

.souradjust{
    flex:7;
}
