/* pages/healthInfo/healthInfo.wxss */
.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.part1{
    margin-top: 80rpx;
    width: 70%;
    position: relative;
    transform: translateX(20%);
    box-shadow: 2rpx 4rpx 6rpx 4rpx rgb(170, 170, 170);
    border-radius: 4%;
}

.title1{
    font-size: medium;
    color: gray;
    margin-top: 10px;
    margin-bottom: 10px;
    margin-left: 12px;
}

.section{
    color:gray;
    font-size: medium;
    margin-left: 55%;
}

.choosesituation {
    color: gray;
    margin-left: 25%;
    margin-top: 10px;
    margin-bottom: 10px;
    width: 50%;
    border-bottom: 1px solid rgb(202, 202, 202);
  }


/* 需求部分 */
.part2{
    margin-top: 80rpx;
    margin-bottom: 50rpx;
    width: 70%;
    transform: translateX(20%);
    position: relative;
    box-shadow: 2rpx 4rpx 6rpx 4rpx rgb(170, 170, 170);
    border-radius: 6%;
  }
  
  .title2{
    width: 100%;
    font-size: medium;
    height: 60rpx;
    padding: 0rpx 25rpx;
    border: inherit;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 33rpx;
    color: gray;
    position: relative;
  }
  
  .chooseBoard {
      width: 100%;
      padding: 0 2%;
      position: relative;
      z-index: 0;
  }
  
  .chooseBoard>view {
      display: inline-block;
      width: 24%;
      height: 80rpx;
  }
  
  .chooseHealth {
      width: 90%;
      border-radius: 20%;
      background-color: rgb(61,128,234);
      margin: 0 auto;
      
    }
    
  .healthFont1 {
      color: #fff;
      text-align: center;
      transform: translateY(15rpx);
      font-size: 13px;
  }
    
  .healthFont2 {
      color: gray;
      text-align: center;
      transform: translateY(15rpx);
      font-size: 13px;
  }

  .save{
    line-height: 50rpx;
    font-size: 30rpx;
    background-color: white;
    color:gray;
    border-radius: 20rpx;
    border-color: rgb(130,130,130);
    box-shadow: 2rpx 4rpx 6rpx 4rpx rgb(140, 140, 140);
    border-radius: 6%;
    overflow: hidden;
  }