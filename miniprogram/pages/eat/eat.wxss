/* pages/eat/eat.wxss */
.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.top{
  width: 100%;
  height: 80rpx;
  background-color: white;
  display: flex;
  align-items: center;
  box-shadow: 0 1rpx 1rpx 1rpx rgb(140, 140, 140);
  position: absolute;
  z-index: 1;
}
.searchBoard{
  width: 85%;
  height: 65%;
  position: relative;
  transform: translateX(5%);
  background-color: rgb(239, 239, 239);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  /* border-bottom-left-radius: 30rpx; */
  border-bottom-right-radius: 30rpx;
  overflow: auto;
  display: flex;
  align-items: center;
}
.searchImage{
  width: 5%;
  height: 50%;
  position: relative;
  transform: translateX(80%)
}
.inputBoard{
  width: 95%;
  font-size: 26rpx;
  color: rgb(160, 160, 160);
  text-align: left;
  position: relative;
  transform: translateX(7%);
}
.messageImage{
  width: 5%;
  height: 50%;
  position: relative;
  transform: translateX(130%);
}

.middle{
  width: 100%;
  position: relative;
  transform: translateY(100rpx);
}
.middle>view{
  display: inline-block;
  width: 50%;
  height: 380rpx;
}
.recommendRecipe{
  margin: 15rpx 0;
  width: 80%;
  height: 100%;
  transform: translateX(11%);
  background-color: white;
  position: relative;
  box-shadow: 2rpx 4rpx 6rpx 4rpx rgb(140, 140, 140);
  border-radius: 6%;
  overflow: auto;
  display: block;
}
.recipeImage{
  width: 100%;
  height: 70%;
}
.recipeName{
  width: 100%;
  height: 10%;
  font-size: 25rpx;
  font-weight: bolder;
  color: rgb(0,0,0);
  display: flex;
  justify-content: center;
  align-items: center;
}
.recipeIntroduction1{
  width: 100%;
  height: 10%;
  font-size: 22rpx;
  color: rgb(80,80,80);
  display: flex;
  justify-content: center;
  align-items: center;
}
.recipeIntroduction2{
  width: 100%;
  height: 10%;
  font-size: 18rpx;
  color: rgb(80,80,80);
  display: flex;
  justify-content: center;
  align-items: center;
}