
.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.top_Pic {
  display: block;
  margin: 20rpx 0;
  width: 70%;
  transform: translateX(21%);
  position: relative;
  box-shadow: 2rpx 4rpx 6rpx 4rpx rgb(170, 170, 170);
  border-radius: 8%;
  overflow: auto;
}
.recipe_image {
  width: 100%;
}
.recipeName {
  font-size: 30rpx;
  font-weight: bolder;
  color: rgb(0, 0, 0);
  position: relative;
  text-align: center;
}
.recipeIntroduction{
  color: rgb(80,80,80);
  font-size: 25rpx;
  position: relative;
  text-align: center;
  padding: 10rpx 0;
}

.foodBoard{
  width: 100%;
  position: relative;
  display: block;
}
.food{
  margin: 30rpx 0;
  width: 675rpx;
  height: 205rpx;
  transform: translateX(37.5rpx);
  position: relative;
  box-shadow: 2rpx 4rpx 6rpx 4rpx rgb(170, 170, 170);
  border-radius: 4%;
  overflow: auto;
  display: flex;
  justify-content: center;
}
.foodPic{
  padding: 5rpx 10rpx;
  width: 30%;
}
.foodInformation{
  width: 70%;
  display: block;
  justify-content: flex-start;
  padding-left: 10rpx;
}

.foodName{
  margin: 15rpx 0;
  font-size: 28rpx;
  font-weight: bolder;
  color: rgb(24, 24, 24);
  position: relative;
  left: 20rpx;
}

.zhishu{
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
}
.zhishuStr{
  font-size: 25rpx;
  margin-left: 5rpx;
  margin-top: 5rpx;
  color: rgb(88, 80, 80);
}
.zhishuValue{
  font-size: 25rpx;
  font-weight: bolder;
  color: rgb(43, 18, 225);
  position: relative;
  left: 170rpx;
  bottom: 32rpx;
}
.foodIntroduction{
  font-size: 25rpx;
  color: rgb(88, 80, 80);
  margin-left: 5rpx;
  margin-top: 5rpx;
  position: relative;
  bottom: 32rpx;
}

.theButton{
  margin: 15rpx 0;
  display: flex;
  justify-content: space-around;
}
.save{
  font-size: 28rpx;
  background-color: rgb(88, 141, 226);
  color:white;
  border-radius: 20rpx;
  overflow: hidden;
}

.empty{
  width: 100%;
  height: 50rpx;
}